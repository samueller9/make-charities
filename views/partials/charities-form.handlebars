<div class="container text-center font-weight-bold">
  <div class="form-group">
    <label for="title">Title</label>
    <input name="title" class="form-control" placeholder="" value="{{charities.title}}" />
  </div>
  <div class="form-group">
    <label for="desc">Description</label>
    <textarea name="desc" class="form-control" placeholder="A description of your charity.">{{charities.desc}}</textarea>
  </div>
  <div class="form-group">
    <label for="imgUrl">Image Url</label>
    <input name="imgUrl" class="form-control" placeholder="" value="{{charities.imgUrl}}"/>
  </div>
  <div class="form-group">
    <label for="websiteUrl">Website</label>
    <input name="website" class="form-control" placeholder"" value="{{charities.websiteUrl}}" />
  </div>
</div>
