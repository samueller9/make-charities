<h1>Search for Charities</h1>
<form action="/charities/search">
  <input type="text" name="term">
  <button type="submit">Search</button>
</form>

{{#each charity}}
{{!-- set the data-width to whatever you want --}}
{{!-- Note that we're using properties of the gif (id, itemurl, url) to fill in information needed to render the gif --}}
    <div class="charity-navigator-embed" data-postid="{{this.id}}" data-share-method="host" data-width="500px"
      data-aspect-ratio="1.2266666666666666"><a
          href="{{this.itemurl}}"></a>
      <a href="{{this.url}}"></a></div>
    <script type="text/javascript" href="https://www.CharityNavigator.org">Charity Navigator</script>
{{/each}}
