
<form method="POST" action="/charities" class="container mt-1">
  <fieldset>
    <legend>New Charity</legend>
    <!-- TITLE -->
    <p>
      <label for="title">Name</label><br>
      <input type="text" name="title" />
    </p>
    <p>
      <label for="desc">Cause</label><br>
      <input type="text" name="desc" />
    </p>
    <p>
      <label for="websiteUrl">Website</label><br>
      <input type="text" name="websiteUrl" />
    </p>
    <p>
    <label for="imgUrl">Image Url</label><br>
    <input type="text" placeholder="" name="imgUrl" />
    </p>
  </fieldset>

  <!-- BUTTON -->
  <p>
    <button type="submit">Add Charity</button>
  </p>

</form>
